# Evident yet unstandarized names

@PACKAGE_INIT@

set_and_check(COLOR_DEBUG_INCLUDE_DIRS "@PACKAGE_COLOR_DEBUG_INCLUDE_DIRS@")
set_and_check(COLOR_DEBUG_MODULE_PATH "@PACKAGE_COLOR_DEBUG_MODULE_PATH@")

# additional options
include(${COLOR_DEBUG_MODULE_PATH}/ColorDebugOptions.cmake)

# we don't need this anymore
unset(COLOR_DEBUG_MODULE_PATH)

# dummy library target for downstreams, let them call add_dependencies() on this
# see use case at https://github.com/roboticslab-uc3m/color-debug/issues/6
if(NOT TARGET ROBOTICSLAB::COLOR_DEBUG)
    add_library(ROBOTICSLAB::COLOR_DEBUG UNKNOWN IMPORTED)
endif()
